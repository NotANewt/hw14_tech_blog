<div class='row'>
  <div class='col-md-6'>
    <h2>Login</h2>

    <form class='form login-form'>
      <div class='form-group'>
        <label for='email-login'>Email</label>
        <input class='form-control' type='email' id='email-login' />
      </div>
      <div class='form-group'>
        <label for='password-login'>Password</label>
        <input class='form-control' type='password' id='password-login' />
      </div>
      <div class='form-group'>
        <button class='btn btn-primary' type='submit'>Login</button>
      </div>
    </form>
  </div>
  <div class='col-md-6'>
    <h2>Signup</h2>

    <form class='form signup-form'>

      <div class='row'>
        <div class='col form-group pl-0'>
          <label for='name-signup'>User Name</label>
          <input class='form-control' type='text' id='name-signup' />
        </div>
        <div class='col form-group p-0'>
          <label for='email-signup'>Email</label>
          <input class='form-control' type='email' id='email-signup' />
        </div>
      </div>

      <div class='row form-group pr-0'>
        <label for='password-signup'>Password</label>
        <input class='form-control' type='password' id='password-signup' />
      </div>
      <div class='row form-group'>
        <button class='btn btn-primary' type='submit'>Signup</button>
      </div>

    </form>
  </div>
</div>

<script src='./js/login.js'></script>