<div class='row'>
  <div class='col-md-6'>
    <h2>Login</h2>

    <form class='form login-form needs-validation'>
      <div class='form-group'>
        <label for='email-login'>Email</label>
        <input class='form-control' type='email' id='email-login' required />
      </div>
      <div class='form-group'>
        <label for='password-login'>Password</label>
        <input
          class='form-control'
          type='password'
          id='password-login'
          required
        />
      </div>
      <div class='form-group'>
        <button class='btn btn-primary' type='submit'>Login</button>
      </div>
    </form>
  </div>
  <div class='col-md-6'>
    <h2>Signup</h2>

    <form class='form signup-form needs-validation'>

      <div class='row'>
        <div class='col form-group'>
          <label for='name-signup'>User Name</label>
          <input class='form-control' type='text' id='name-signup' required />
        </div>
        <div class='col form-group'>
          <label for='email-signup'>Email</label>
          <input class='form-control' type='email' id='email-signup' required />
        </div>
      </div>

      <div class='form-group'>
        <label for='password-signup'>Password</label>
        <input
          class='form-control'
          type='password'
          id='password-signup'
          required
        />
      </div>
      <div class='form-group'>
        <button class='btn btn-primary' type='submit'>Signup</button>
      </div>

    </form>
  </div>
</div>

<div id='snackbar'></div>

<script src='./js/login.js'></script>