<article class='blog-post'>
  <h2>{{title}}</h2>
  <p class='blog-details'>Posted by
    {{user.name}}
    on
    {{format_date date_created}}
  </p>
  <p class='blog-content'>{{contents}}</p>
</article>

<aside>
  <h3>Comments</h3>

  {{#if logged_in}}
    {{! Add a form to create a new comment }}
    <form class='form comment-form'>
      <div class='form-group'>
        <label for='comment-title'>Write your comment here</label>
        <input
          class='form-input'
          type='text'
          id='comment-title'
          name='comment-title'
        />
      </div>

      <div class='form-group'>
        <button
          type='submit'
          class='btn btn-primary comment-button'
          data-id='{{id}}'
        >Create</button>
      </div>
    </form>
  {{else}}
    <p>You can <a href='/login'>log in</a> to add a comment.</p>
  {{/if}}

  <div class='comments'>
    {{#each comments as |comment|}}
      <div class='comment'>
        <p class='comment-content'>{{comment.title}}</p>
        <p class='comment-details'>{{comment.user.name}}
          {{format_date comment.date_created}}</p>
      </div>
    {{/each}}
  </div>

</aside>

<script src='../js/blog.js'></script>