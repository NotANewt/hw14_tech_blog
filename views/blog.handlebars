<div class='text-center'>
  <h2>{{title}}</h2>
  <p>{{contents}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}} </p>

</div>

<div>
  <h3>Comments:</h3>
  {{! show all comments here }}
  <div>
    {{#each comments as |comment|}}
      <div>{{comment.title}}</div>
    {{/each}}
  </div>

  {{#if logged_in}}
    {{! Add a form to create a new comment }}
    <div>
      <h3>Have something to add?</h3>

      <form class='form new-blog-form'>
        <div class='form-group'>
          <label for='comment-title'>Write your comment here:</label>
          <input
            class='form-input'
            type='text'
            id='comment-title'
            name='comment-title'
          />
          <input type='hidden' value='{{id}}' id='comment-blog_id' />
        </div>

        <div class='form-group'>
          <button type='submit' class='btn btn-primary'>Create</button>
        </div>
      </form>
    </div>
  {{/if}}

</div>

<script src='../js/blog.js'></script>