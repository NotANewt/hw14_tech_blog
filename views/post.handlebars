<div class='text-center'>
  <h2>{{title}}</h2>
  <p>{{contents}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>

  <p>
    <button class='btn btn-primary'>See This Post!</button>
  </p>
</div>

<div>
  <h3>Comments:</h3>
  {{! show all comments here }}
  <div>
    {{#each comments as |comment|}}
      <div>{{comment.title}}</div>
    {{/each}}
  </div>

  {{! Add a form to create a new comment }}

</div>