<html lang='en'>

  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Tech Blog</title>
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css'
      rel='stylesheet'
      integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3'
      crossorigin='anonymous'
    />
    <link rel='stylesheet' href='/css/jass.css' />

    <link rel='stylesheet' href='/css/style.css' />
  </head>

  <body>
    <div class='container'>
      <header class=''>
        <h1>
          <a href='/'>Tech Blog</a>
        </h1>
        <nav>
          <ul>
            <li><a href='/'>Home</a></li>
            <li><a href='/dashboard'>Dashboard</a></li>
            <!-- Conditionally render login or logout links -->
            {{#if logged_in}}
              <li><button class='no-button' id='logout'>Logout</button></li>
            {{else}}
              <li><a href='/login'>Login</a></li>
            {{/if}}
          </ul>
        </nav>
      </header>
      <main>
        <!-- Render the sub layout -->
        {{{body}}}
      </main>
      <footer>
        <aside>Made with &#9825; and Javascript by
          <a
            href='https://github.com/NotANewt'
            target='_blank'
          >Meegan</a></aside>
      </footer>
    </div>

    <!-- Render script for logged in users only -->
    {{#if logged_in}}
      <script src='/js/logout.js'></script>
    {{/if}}
  </body>

</html>